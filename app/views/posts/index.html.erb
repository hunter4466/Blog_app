<section class='user-posts'>
  <div class='user'>
    <div class='profile-photo'>photo</div>
    <div class='username'>
      <h1 class='name'><%= @user.name %></h2>
      <h2 class='posts-counter'>Number of posts: <%= @user.posts_counter %></h4>
    </div>
  </div>
  <ul class='posts-list'>
    <% @posts.each do |post| %>
      <li class='post'>
        <div class='post-details'>
          <div class='post-title'>
            <h4><%= link_to post.title, user_post_path(user_id: @user, id: post.id) %></h4>
          </div>
          <div class='post-description'>
            <p><%= post.text %></p>
          </div>
          <div class='post-counters'>
            <h5>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counter %></h5>
          </div>
        </div>
        <div class='post-comments'>
          <ul class='comments-list'>
            <% @comments.each do |comment| %>
              <% if comment.author_id == @user.id && comment.post_id == post.id %>
                <li class='user-comment'>
                  <p>Username: <%= comment.text %></p>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </li>
    <% end %>
  </ul>
  <div class="pagination"><button class="pagination-btn">Pagination</button></div>
</section>